{% for item in collections.sections %}
  {% if item.data.type === 'contact' %}
    <div id="contact" class="w-full min-h-screen flex flex-col justify-center items-center bg-gray-800">
      <div class="self-center text-center w-full xl:w-5/6 px-4 sm:px:0">
        <h2 class="tracking-widest text-gray-200 text-4xl mb-4 italic font-black uppercase">{{ item.data.title }}</h2>
        <div class="font-light text-gray-400 text-3xl font-mono">
          {{ item.templateContent | safe }}
        </div>
        <form class="w-full max-w-lg my-20 mx-auto" action="#" method="post" id="contact-form" target="_blank" validate>
          <div class="flex items-center border-b border-red-400 py-2">
            <input class="appearance-none bg-transparent border border-transparent w-full text-gray-50 font-thin focus:outline-none focus:bg-white focus:text-gray-900 focus:border-white mr-3 py-2 px-3" type="email" value="" name="EMAIL" placeholder="lenina.crowne@thehatchery.co" aria-label="Email Address" required>
            <button class="flex-shrink-0 bg-orange-300 border-orange-300 hover:bg-gray-800 hover:text-orange-300 border text-white font-extrabold py-2 px-4" type="submit" name="contact">
              send
            </button>
          </div>
          <label class="block text-gray-200 text-left px-2 mt-4" for="gdpr_37169">
            <input class="leading-tight" type="checkbox" id="gdpr_37169" name="gdpr[37169]" value="Y" required>
            <span class="text-md font-light">
              I agree with the <a href="/privacy" class="underline hover:no-underline hover:text-orange-400" title="Privacy Policy" target="_blank">Privacy Policy</a>
            </span>
          </label>
        </form>
      </div>
    </div>
  {% endif %}
{% endfor %}